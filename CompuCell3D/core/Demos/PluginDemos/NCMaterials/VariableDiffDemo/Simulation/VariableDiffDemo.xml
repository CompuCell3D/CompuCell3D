<!-- Reproducing a tiny 2D version of the apparatus and experiments 
from "Neutrophil Chemotaxis in Moving Gradients", M. Qasaimeh (2018)  -->
<CompuCell3D Revision="20190906" Version="4.1.0">
   
    <Metadata>
        <NumberOfProcessors>1</NumberOfProcessors>
        <DebugOutputFrequency>10</DebugOutputFrequency>
    </Metadata>
   
    <Potts>
        <Dimensions x="100" y="50" z="1"/>
        <Steps>50000</Steps>
        <Temperature>10.0</Temperature>
        <NeighborOrder>1</NeighborOrder>
    </Potts>
   
    <Plugin Name="CellType">
        <CellType TypeId="0" TypeName="Medium"/>
        <CellType TypeId="1" TypeName="Type1"/>
    </Plugin>
   
    <Plugin Name="Volume">
        <VolumeEnergyParameters CellType="Type1" LambdaVolume="2.0" TargetVolume="50"/>
    </Plugin>
   
    <Plugin Name="Contact">
        <Energy Type1="Medium" Type2="Medium">0.0</Energy>
        <Energy Type1="Medium" Type2="Type1">0.0</Energy>
        <Energy Type1="Type1" Type2="Type1">5.0</Energy>
        <NeighborOrder>4</NeighborOrder>
    </Plugin>
   
    <Plugin Name="Chemotaxis">
        <ChemicalField Name="F1">
            <ChemotaxisByType ChemotactTowards="Medium" Lambda="500.0" Type="Type1"/>
        </ChemicalField>
    </Plugin>
   
    <Plugin Name="NCMaterials">
        <NCMaterial Material="M1"/>
        <NCMaterial Material="M2"/>
        <NCMaterial Material="M3"/>
        
        <NCMaterialAdvects Material="M2">False</NCMaterialAdvects>
        <NCMaterialDurability Material="M2">1000.0</NCMaterialDurability>
        <NCMaterialAdvects Material="M3">False</NCMaterialAdvects>
        <NCMaterialDurability Material="M3">1000.0</NCMaterialDurability>
        
        <NCAdhesion CellType="Type1" Material="M1">15.0</NCAdhesion>
        <NCAdhesion CellType="Type1" Material="M2">0.0</NCAdhesion>
        <NCAdhesion CellType="Type1" Material="M3">100.0</NCAdhesion>
        <NeighborOrder>4</NeighborOrder>
        
        <RemodelingQuantity CellType="Type1" Material="M1">1.0</RemodelingQuantity>
        <RemodelingQuantity CellType="Type1" Material="M2">0.0</RemodelingQuantity>
        <RemodelingQuantity CellType="Type1" Material="M3">0.0</RemodelingQuantity>
        
        <NCMaterialDiffusivity Material="M1" Field="F1">0.2</NCMaterialDiffusivity>
        <NCMaterialDiffusivity Material="M2" Field="F1">0.0</NCMaterialDiffusivity>
        <NCMaterialDiffusivity Material="M3" Field="F1">0.0</NCMaterialDiffusivity>
        
        <NormalizeQuantities/>
        
        <FieldDesign>
<!--             Border -->
            <Design Method="Parallelepiped">
                <NCMaterial Material="M2">1.0</NCMaterial>
                <StartPoint x="0" y="0" z="0"/>
                <EndPoint x="100" y="50" z="1"/>
            </Design>
            
            <Design Method="Parallelepiped">
                <NCMaterial Material="M1">1.0</NCMaterial>
                <StartPoint x="5" y="5" z="0"/>
                <EndPoint x="95" y="45" z="1"/>
            </Design>
            
<!--             Non-adhesive wall segments -->
            <Design Method="Parallelepiped">
                <NCMaterial Material="M3">1.0</NCMaterial>
                <StartPoint x="0" y="5" z="0"/>
                <EndPoint x="4" y="35" z="1"/>
            </Design>
            
            <Design Method="Parallelepiped">
                <NCMaterial Material="M3">1.0</NCMaterial>
                <StartPoint x="96" y="5" z="0"/>
                <EndPoint x="100" y="35" z="1"/>
            </Design>
            
<!--             Inlet -->
            <Design Method="Parallelepiped">
                <NCMaterial Material="M1">1.0</NCMaterial>
                <StartPoint x="96" y="35" z="0"/>
                <EndPoint x="100" y="45" z="1"/>
            </Design>
            
<!--             Outlet -->
            <Design Method="Parallelepiped">
                <NCMaterial Material="M1">1.0</NCMaterial>
                <StartPoint x="0" y="35" z="0"/>
                <EndPoint x="4" y="45" z="1"/>
            </Design>
            
        </FieldDesign>
        
    </Plugin>
    
    <Steppable Type="DiffusionSolverFE">
        <DiffusionField Name="F1">
            <DiffusionData>
                <FieldName>F1</FieldName>
                <GlobalDiffusionConstant>0.2</GlobalDiffusionConstant>
                <DiffusionCoefficient CellType="Type1">0.1</DiffusionCoefficient>
                <ConcentrationThresholds/>
            </DiffusionData>
            <BoundaryConditions>
                <Plane Axis="X">
                    <ConstantDerivative PlanePosition="Min" Value="0.03"/>
                    <ConstantDerivative PlanePosition="Max" Value="0.03"/>
                </Plane>
                <Plane Axis="Y">
                    <ConstantDerivative PlanePosition="Min" Value="0.0"/>
                    <ConstantDerivative PlanePosition="Max" Value="0.0"/>
                </Plane>
            </BoundaryConditions>
        </DiffusionField>
    </Steppable>
   
   <Steppable Type="UniformInitializer">
      <Region>
         <BoxMin x="10" y="5" z="0"/>
         <BoxMax x="17" y="12" z="1"/>
         <Gap>0</Gap>
         <Width>7</Width>
         <Types>Type1</Types>
      </Region>
   </Steppable>
</CompuCell3D>
